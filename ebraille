
// 3rd SEM mini project E - Braille 

#define PIN_COUNT 6

// The following instruction defines hardware pins used to deliver the output.
int braillePins[] = { A0, A1, A2, A3, A4, A5 };

// The following instruction defines amount of delay between one alphanumeric chararter and its imeadiate output. 
int refreshSpeed = 10000;

void setup() 
{
  // The following instructions implements a for loop to initialise 6 output pins.
  for (int i=0; i < PIN_COUNT; i++)
  {     
    pinMode(braillePins[i], OUTPUT);     
    digitalWrite(braillePins[i], LOW);   
  }  

  // The following instruction implements a delay function to give suffiecient time for system to produce a data.
  delay(refreshSpeed); 
  
  // The following instructions defines Baud Rate of the system. 
  Serial.begin(9600);
   
}
 
void loop() 
{
  
  if (Serial.available() > 0) 
  {
    int data = Serial.read();
    
    switch (data)
  {          
           //Implements number 0-9
           case 48:
           {
            Serial.println("The number pressed is 0");
            digitalWrite(A2, HIGH);
            digitalWrite(A3, HIGH);
            digitalWrite(A4, HIGH);
            digitalWrite(A5, HIGH);
            delay(refreshSpeed);
            digitalWrite(A2, LOW);
            digitalWrite(A3, LOW);
            digitalWrite(A4, LOW);
            digitalWrite(A5, LOW);
            digitalWrite(A1, HIGH);
            digitalWrite(A3, HIGH);
            digitalWrite(A4, HIGH);
            delay(refreshSpeed);
            digitalWrite(A1, LOW);
            digitalWrite(A3, LOW);
            digitalWrite(A4, LOW);
            
            break ;
           }
           case 49:
           {
            Serial.println("The number pressed is 1");
            
